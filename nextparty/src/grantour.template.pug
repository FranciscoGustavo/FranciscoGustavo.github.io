doctype html
html(lang="en")
    head
        include includes/head.pug
        +head('GranTour - NextParty')
    body(data-page = "grantour")
        include includes/header_pages.pug

        .container-fluid.line-time
            .container
                .line-time-container
                    include includes/line_time_card.pug
                    each val, index in [1,2,3,4,5,6,7,8]
                        if (val % 2 == 0)
                            +lineTimeCard('card-line card-line-rigth')
                        else
                            +lineTimeCard('card-line card-line-left')

        include includes/footer.pug
!!!5
%html{class:"no-js",lang:"es"}
	%head
		%meta{charset:"UTF-8"}
		%title Formulario
		%link{rel:"stylesheet", href:"css/normalize.css"}
		%meta{content:"Aprende estudiando en la mejor escuela de internet.", name:"description"}
		%meta{content:"width=device-width, initial-scale=1", name:"viewport"}
		%link{href:"https://fonts.googleapis.com/css?family=Roboto+Condensed:300,300i,400,400i,700,700i", rel:"stylesheet"}
		%link{href:"https://fonts.googleapis.com/icon?family=Material+Icons", rel:"stylesheet"}
		%link{rel:"stylesheet", href:"css/styles.css"}
		%script{src:"dist/modernizr-2.8.3.min.js"}

	%body
		.contenedor-formulario
			.wrap
				%form{action:"", class:"formulario", name:"formulario_registro", method:"get"}
					%div
						.input-group
							%input{type:"text", id:"nombre", name:"nombre"}
							%label{class:"label", for:"nombre"}Nombre:
						.input-group
							%input{type:"email", id:"correo", name:"correo"}
							%label{class:"label", for:"correo"}Correo:
						.input-group
							%input{type:"password", id:"pass", name:"pass"}
							%label{class:"label", for:"pass"}Contraseña:
						.input-group
							%input{type:"password", id:"pass2", name:"pass2"}
							%label{class:"label", for:"pass2"}Repetir Contraseña

						%input{type:"submit", id:"btn-submit", value:"Enviar"}
		%script{src:"dist/app.js"}